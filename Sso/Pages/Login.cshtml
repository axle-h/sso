@page
@model Sso.Pages.Index

@{
    Layout = "_LayoutHero";
}

<h1 class="hero-title">
    @if (ViewContext.ModelState.IsValid == false)
    {
        <span class="text-danger">
            <b>Oops!</b> @ViewContext.ModelState[""]!.Errors[0].ErrorMessage
        </span>
    }
    else
    {
        <b>Hi!</b> <text>Sign in to your ax-h account.</text>
    }
</h1>

<form method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-outline mb-4">
        <input asp-for="Username" class="form-control form-control-lg" autofocus required />
        <label asp-for="Username" class="form-label">Username</label>
    </div>

    <div class="form-outline mb-4">
        <input asp-for="Password" type="password" class="form-control form-control-lg" required />
        <label asp-for="Password" class="form-label">Password</label>
    </div>

    <div class="pt-1 mb-4">
        <button class="btn btn-outline-primary btn-lg btn-block px-5" type="submit">Login</button>
    </div>
</form>