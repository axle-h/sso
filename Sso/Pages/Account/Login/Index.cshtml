@page
@model Sso.Pages.Login.Index

@{
    Layout = "Shared/_LayoutHero";
}

<partial name="_ValidationSummary" />

<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;"><b>Hi!</b> Sign in to your ax-h account.</h5>

<form asp-page="/Account/Login/Index">
    <input type="hidden" asp-for="Input.ReturnUrl" />

    <div class="form-outline mb-4">
        <input asp-for="Input.Username" class="form-control form-control-lg" autofocus required />
        <label asp-for="Input.Username" class="form-label">Username</label>
    </div>

    <div class="form-outline mb-4">
        <input asp-for="Input.Password" type="password" class="form-control form-control-lg" required />
        <label asp-for="Input.Password" class="form-label">Password</label>
    </div>

    <div class="pt-1 mb-4">
        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
    </div>
</form>