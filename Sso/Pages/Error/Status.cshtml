@page "{status}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.WebUtilities
@model Sso.Pages.Error.StatusPage

@{
    Layout = "Shared/_LayoutHero";
}

<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
    <b>@Model.Status</b> @ReasonPhrases.GetReasonPhrase(Model.Status)
</h5>

<div class="pt-1 mb-4">
    <a class="btn btn-outline-primary btn-lg btn-block" asp-page="/Index">Back Home</a>
</div>